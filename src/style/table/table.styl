.components.table.v-table-wrap {
  position: relative;
  overflow: hidden;
  max-width: 100%;
  background-color: #fff;
  box-sizing: border-box;

  &.v-table-panel--is-full {
    size(100%);
  }

  .v-table-caption {
    position: relative;
  }

  .v-table--is-stripe {
    .v-table-header, .v-table-header--wrap {
      & table thead th {
        background-color: rgba(247, 247, 247, 1);
      }
    }

    .v-table-body, .v-table-body--wrap {
      & table tbody>tr:nth-child(even) {
        background-color: rgba(247, 247, 247, 1);
      }
    }
  }

  .v-table-container {
    position: relative;
    overflow-x: hidden;
    overflow-y: auto;

    &.v-table-fixed-header {
      overflow-y: hidden;

      & .v-table-body {
        overflow-y: auto;
      }
    }

    &.v-table-is-xscroll {
      overflow-x: auto;

      &.v-table-fixed-header {
        overflow-x: hidden;

        & .v-table-body {
          overflow-x: auto;
        }
      }
    }
  }

  .v-table-container--is-fixed {
    position: absolute;
    top: 0;
    right: auto;
    left: auto;
    background-color: #ffffff;
    overflow: hidden;
  }

  .v-table-header {
    position: relative;
    overflow: hidden;
    transition: all 0.1s;
  }

  .v-table-body {
    position: relative;
    overflow-x: hidden;
    overflow-y: hidden;

    .v-table-box {
      margin-top: -1px;
    }
  }

  .v-table-header--wrap {
    position: relative;
    overflow: hidden;
    transition: all 0.1s;
    & table thead tr:only-child th[rowspan="2"]{
        height 80px
      }
  }

  .v-table-body--wrap {
    position: relative;
    overflow: hidden;

    .v-table-box {
      margin-top: -1px;
    }
  }

  .v-table-box {
    width: 100%;
    table-layout: fixed;
    border-collapse: collapse;
    border-spacing: 0;
    transition: all 0.1s;

    &[skin='line'] {
      th, td {
        border-width: 0;
        border-bottom-width: 1px;
      }
    }

    &[skin='row'] {
      th, td {
        border-width: 0;
        border-right-width: 1px;
      }
    }

    &[skin='none'] {
      th, td {
        border: none;
      }
    }

    tr {
      transition: all 0.3s;
    }

    th {
      font-weight: 400;
      border-width: 1px;
      border-style: solid;
      border-color: rgba(0, 0, 0, 0.12);
      position: relative;
      padding: 5px 15px;
      height: 40px;
      line-height: 40px;
      font-size: 14px;
    }

    td {
      border-width: 1px;
      border-style: solid;
      border-color: rgba(0, 0, 0, 0.12);
      position: relative;
      padding: 9px 0;
      font-size: 14px;

      &.v-empty-wrap {
        color: rgba(0, 0, 0, 0.38);
      }

      &.v-loading-wrap {
        padding: 0 0;
      }
    }
  }

  .v-text-left {
    text-align: left !important;
  }

  .v-text-center {
    text-align: center !important;
  }

  .v-text-right {
    text-align: right !important;
  }

  .v-table-pagination--wrap {
    position: relative;
    width: 100%;
  }

  .v-table-cell {
    width: 100%;
    min-height: 29px;
    line-height: 29px;

    &[aria-sort="desc"]{
      .v-table-icon-desc{
        border-top-color: rgba(0,0,0,.87);
      }
    }
    &[aria-sort="asc"]{
      .v-table-icon-asc{
        border-bottom-color: rgba(0,0,0,.87);
      }
    }
  }
  .v-table-cell-ellipsis{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .v-table-cell-cursor{
    cursor pointer !important
  }
  .v-table-sort{
    display inline-block
    position relative
    padding 0 0;
    width: 10px;
    height: 22px;
    margin:0 2px;
    vertical-align middle
  }

  .v-table-icon{
    position absolute
    left: 0px;
    border-width: 5px;
    border-style solid;
    border-color: transparent;
    display: inline-block;
    width: 0;
    height: 0;
  }
  .v-table-icon-asc{
    top: 0px;
    border-bottom-color: rgb(164, 164, 164);
  }
  .v-table-icon-desc{
    bottom: 0px;
    border-top-color: rgb(164, 164, 164);
  }

  .v-editable-wrap .v-table-cell {
    cursor: pointer;
  }
}
